{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "react",
    "jest"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "no-console": "off",
    "react/sort-comp": "off",
    "react/destructuring-assignment": [
      0,
      "always",
      {
        "ignoreClassFields": true
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ]
  }
}